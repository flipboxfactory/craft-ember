{% macro expandableElement(element) %}
    <div class="fancy-element expandable">
        {% include "_elements/element" with {
        size: 'small',
        element: element
        } only %}
    </div>
{% endmacro %}

{% macro hudElement(element) %}
    {% set hudID = "element-hud-"~random() %}
    <div class="fancy-element element-hud" id="{{ hudID }}">
        {% include "_elements/element" with {
            size: 'small',
            element: element
        } only %}
    </div>
    {% js %}
        new Craft.ElementInfoHUD($("#{{ hudID }} > .element"));
    {% endjs %}
{% endmacro %}